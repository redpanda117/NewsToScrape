    <a class="navbar-brand" href="#">Mongo Scrapper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon">â˜°</span>
  </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="#">Saved Articles</a>
            </li>
            <li>
                <button type="button" class="btn btn-dark" id="scrapeButton" data-toggle="modal" data-target="#confirmScrape">Scrape Articles</button>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <h1 id="noArticles">There are no articles please click the scrape article button to see the latest news</h1>
    <div class="card-deck">
        <!--where the articles wil populate-->
        <div class="row">

            {{#each articles}}
            <div class="col-md-4" id="articleCard">
                <div class="card">
                    <img class="card-img-top" class="img-responsive" src="{{this.image}}">
                    <div class="card-block">
                        <h4 class="card-title">{{this.title}}</h4>
                        <p class="card-text">{{this.summary}}</p>
                        <a class="btn btn-info" href="{{this.link}}" id="linkButton">See Full Article</a>
                        <button id="commentButton" class="btn btn-info" data-toggle="modal" data-target="#comments" data_id="{{this._id}}">Add Comment</button>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</div>

<footer>
    <p>Copyright &copy; 2017 Tina Nguyen<span id="divider"> |</span> Articles are scraped from <a href="http://www.newsmax.com/newsfront/" id="source">http://www.newsmax.com/newsfront/</a></p>
</footer>



<!--modal confirming you have scrape articles-->
<div class="modal" id="confirmScrape" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Scraped Articles</h4>
            </div>
            <div class="modal-body">
                <p>Congratulations you have successfull scraped articles from the website http://www.newsmax.com/</p>
                <p>Please click on the button to see what articles where scrape.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="dispalyArticles">See Scrape Articles</button>
            </div>
        </div>
    </div>
</div>
<!--modal to add comments-->
<div class="modal" id="comments" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" id="currentArticleTitle">


            </div>

            <div class="modal-body">
                <div id="previousNote">
                    <!--Where previous comment be display-->
                </div>
                <div class="form-group">
                    <label for="exampleTextarea">Add a comment</label>
                    <textarea class="form-control" id="userComment" rows="5"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" data-dismiss="modal" id="saveNote" data_id= "">Submit</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
